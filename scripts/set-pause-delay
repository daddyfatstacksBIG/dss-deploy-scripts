#!/usr/bin/env bash

# shellcheck source=lib/common.sh
. "${LIB_DIR:-$(cd "${0%/*}/../lib"&&pwd)}/common.sh"

# Get config variables
CONFIG_FILE="$OUT_DIR/config.json"

delay=$(jq -r ".pauseDelay" "$CONFIG_FILE")

if [[ "$delay" -gt 0 ]]; then
    # Get addresses
    loadAddresses

    calldata="$(seth calldata 'setDelay(address,address,uint256)' "$MCD_PAUSE" "$MCD_GOV_ACTIONS" "$(seth --to-uint256 "$delay")")"
    seth send "$PROXY_DEPLOYER" 'execute(address,bytes memory)' "$PROXY_PAUSE_ACTIONS" "$calldata"
fi
